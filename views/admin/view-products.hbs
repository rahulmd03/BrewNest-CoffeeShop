<section>
  <div class="container">
    <div class="row">
      <div class="col d-flex justify-content-end">
        <a href="/admin/add-product" class="add-product-btn">Add Product</a>
      </div>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">{{addOne @index}}</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td>{{this.Price}}</td>

          <td><img style="width:50px; height:50px" src="/product-images/{{this._id}}.jpg"></td>
          <td>
            <div class="d-flex">
              <a href="/admin/edit-product/{{this._id}}" class="btn-edit mr-2">Edit</a>
              <a href="/admin/delete-product/{{this._id}}" class="btn-delete"
                onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>